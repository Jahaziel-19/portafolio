---
import { Mail, MapPin, Phone } from 'lucide-react';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="contact" class="py-20 bg-slate-800/50">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">{t('contact.title')}</h2>
      <div class="w-20 h-1 bg-primary mx-auto rounded-full"></div>
      <p class="mt-4 text-slate-400">
        {t('contact.description')}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
      <div>
        <h3 class="text-xl font-bold text-white mb-6">{t('contact.info.title')}</h3>
        <div class="space-y-6">
          <div class="flex items-start">
            <div class="flex-shrink-0 w-12 h-12 bg-slate-900 rounded-lg flex items-center justify-center border border-slate-800 text-primary">
              <Mail className="w-6 h-6" />
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-slate-400">{t('contact.email')}</p>
              <a href="mailto:jahazielvazquez19@gmail.com" class="text-lg text-white hover:text-primary transition-colors">
                jahazielvazquez19@gmail.com
              </a>
            </div>
          </div>
          
          <div class="flex items-start">
            <div class="flex-shrink-0 w-12 h-12 bg-slate-900 rounded-lg flex items-center justify-center border border-slate-800 text-primary">
              <MapPin className="w-6 h-6" />
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-slate-400">{t('contact.location')}</p>
              <p class="text-lg text-white">{t('contact.location.value')}</p>
            </div>
          </div>

          <div class="flex items-start">
            <div class="flex-shrink-0 w-12 h-12 bg-slate-900 rounded-lg flex items-center justify-center border border-slate-800 text-primary">
              <Phone className="w-6 h-6" />
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-slate-400">{t('contact.phone')}</p>
              <p class="text-lg text-white">+52 276 101 65 09</p>
            </div>
          </div>
        </div>
      </div>

      <form 
        action="https://formspree.io/f/xwvpaleb"
        method="POST" 
        class="space-y-4"
        id="contact-form"
      >
        <div>
          <label for="name" class="block text-sm font-medium text-slate-300 mb-1">{t('contact.form.name')}</label>
          <input type="text" id="name" name="name" required class="w-full px-4 py-3 bg-slate-900 border border-slate-700 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent text-white placeholder-slate-500 outline-none transition-all" placeholder={t('contact.form.name.placeholder')} />
        </div>
        <div>
          <label for="email" class="block text-sm font-medium text-slate-300 mb-1">{t('contact.form.email')}</label>
          <input type="email" id="email" name="email" required class="w-full px-4 py-3 bg-slate-900 border border-slate-700 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent text-white placeholder-slate-500 outline-none transition-all" placeholder={t('contact.form.email.placeholder')} />
        </div>
        <div>
          <label for="message" class="block text-sm font-medium text-slate-300 mb-1">{t('contact.form.message')}</label>
          <textarea id="message" name="message" rows="4" required class="w-full px-4 py-3 bg-slate-900 border border-slate-700 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent text-white placeholder-slate-500 outline-none transition-all" placeholder={t('contact.form.message.placeholder')}></textarea>
        </div>
        <button type="submit" id="submit-btn" class="w-full px-6 py-3 bg-primary hover:bg-blue-600 text-white font-medium rounded-lg transition-all shadow-lg shadow-blue-500/20 disabled:opacity-50 disabled:cursor-not-allowed">
          {t('contact.form.submit')}
        </button>
        <p id="form-status" class="mt-4 text-center text-sm font-medium hidden"></p>
      </form>
    </div>
  </div>
</section>

<script define:vars={{ sendingText: t('contact.form.sending'), successText: t('contact.form.success'), errorText: t('contact.form.error') }}>
  const form = document.getElementById('contact-form');
  const status = document.getElementById('form-status');
  const submitBtn = document.getElementById('submit-btn');

  if (form) {
    form.addEventListener('submit', async function(e) {
      e.preventDefault();
      
      if (!status || !submitBtn) return;

      // Reset status
      status.classList.add('hidden');
      status.classList.remove('text-green-400', 'text-red-400');
      
      // Loading state
      submitBtn.disabled = true;
      const originalBtnText = submitBtn.textContent;
      submitBtn.textContent = sendingText;

      try {
        const response = await fetch(form.action, {
          method: form.method,
          body: new FormData(form),
          headers: {
            'Accept': 'application/json'
          }
        });

        if (response.ok) {
          status.textContent = successText;
          status.classList.remove('hidden');
          status.classList.add('text-green-400');
          form.reset();
        } else {
          const data = await response.json();
          if (Object.hasOwn(data, 'errors')) {
            status.textContent = data["errors"].map((error) => error["message"]).join(", ");
          } else {
            status.textContent = errorText;
          }
          status.classList.remove('hidden');
          status.classList.add('text-red-400');
        }
      } catch (error) {
        status.textContent = errorText;
        status.classList.remove('hidden');
        status.classList.add('text-red-400');
      } finally {
        submitBtn.disabled = false;
        submitBtn.textContent = originalBtnText;
      }
    });
  }
</script>
