---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const currentYear = new Date().getFullYear();
---

<footer class="bg-slate-950 py-8 border-t border-slate-900">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 flex flex-col md:flex-row justify-between items-center">
    <div class="mb-4 md:mb-0">
      <p class="text-slate-500 text-sm">
        © {currentYear} Jesús Jahaziel Sánchez Vázquez. {t('footer.rights')}
      </p>
    </div>
    <div class="flex space-x-6">
      <a href="#" class="text-slate-500 hover:text-white transition-colors text-sm">{t('footer.privacy')}</a>
      <a href="#" class="text-slate-500 hover:text-white transition-colors text-sm">{t('footer.terms')}</a>
    </div>
  </div>
</footer>
