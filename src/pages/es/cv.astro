---
import '@fontsource/inter';
import { Mail, MapPin, Phone, Github, Linkedin, Globe, Printer, ArrowLeft } from 'lucide-react';

const personalInfo = {
  name: "JESÚS JAHAZIEL SÁNCHEZ VÁZQUEZ",
  role: "Fullstack Developer",
  email: "jahazielvazquez19@gmail.com",
  phone: "+52 276 101 65 09",
  location: "México",
  linkedin: "linkedin.com/in/jahaziel-vazquez",
  github: "github.com/Jahaziel-19",
  website: "jahaziel.is-a.dev"
};

const summary = "Especializado en desarrollo backend con Django, Flask y PostgreSQL, creo soluciones robustas y escalables para la web moderna. Con experiencia en la construcción de APIs RESTful y aplicaciones full-stack, mi enfoque es entregar software eficiente y de alta calidad.";

const skills = [
  { category: "Backend", items: ["Django", "Flask", "FastAPI", "RESTful APIs", "Python 3+"] },
  { category: "Frontend", items: ["JavaScript (ES6+)", "HTML5", "CSS3", "Tailwind CSS"] },
  { category: "Base de Datos", items: ["PostgreSQL", "MySQL", "SQLite", "SQLAlchemy", "Django ORM", "Mongo DB"] },
  { category: "Herramientas", items: ["Git", "GitHub", "Linux", "VS Code", "Postman"] },
];

const projects = [
  {
    title: "Mercadito - Sistema de Comercio Electrónico Escolar",
    role: "Full Stack Developer",
    points: [
      "Diseñé un backend robusto para una plataforma de comercio electrónico escolar utilizando Flask y SQLAlchemy.",
      "Implementé autenticación segura, gestión de inventario, seguimiento de pedidos y un sistema de notificaciones por correo electrónico.",
      "Utilicé Python y Flask-Mail para asegurar una comunicación fluida dentro de la plataforma."
    ],
    tech: ["Flask", "SQLAlchemy", "Flask-Mail", "Python"]
  },
  {
    title: "SIGES - Sistema Integral de Gestión Escolar",
    role: "Full Stack Developer",
    points: [
      "Desarrollé un sistema integral para procesos académicos, registro de estudiantes y admisiones utilizando una arquitectura MVT.",
      "Integré Django, PostgreSQL, Bootstrap y JavaScript para gestionar flujos de trabajo administrativos complejos."
    ],
    tech: ["Django", "PostgreSQL", "Bootstrap", "JavaScript"]
  },
  {
    title: "Aplicación de Contactos",
    role: "Backend Developer",
    points: [
      "Construí una aplicación CRUD segura para la gestión de contactos con autenticación robusta y funcionalidades de exportación de datos.",
      "Aproveché React, Flask, Mongo DB y JWT para una solución full-stack."
    ],
    tech: ["React", "Flask", "Mongo DB", "JWT"]
  }
];

const education = [
  {
    degree: "Técnico Superior Universitario en Desarrollo de Software",
    status: "Completado",
    institution: "Universidad Tecnológica de Oriental, México"
  },
  {
    degree: "Ingeniería en Desarrollo y Gestión de Software",
    status: "En Curso",
    institution: "Universidad Tecnológica de Oriental, México",
    note: "Graduación Esperada: 2027"
  }
];
---

<!doctype html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>CV - {personalInfo.name}</title>
    <style>
        @media print {
            @page { margin: 0.5cm; size: auto; }
            body { 
                -webkit-print-color-adjust: exact; 
                print-color-adjust: exact; 
                background: white; 
                font-size: 10pt;
            }
            .no-print { display: none !important; }
            a { text-decoration: none; color: black; }
            main {
                box-shadow: none !important;
                margin: 0 !important;
                padding: 0 !important;
                width: 100% !important;
                max-width: 100% !important;
            }
            /* Compact spacing for print */
            h1 { font-size: 22pt !important; margin-bottom: 2px !important; }
            h2 { font-size: 12pt !important; margin-bottom: 8px !important; }
            h3 { font-size: 11pt !important; margin-top: 10px !important; margin-bottom: 4px !important; border-bottom: 1px solid #e2e8f0; }
            section { margin-bottom: 8px !important; }
            p, li { line-height: 1.3 !important; }
            
            /* Avoid breaking elements across pages */
            .break-avoid { break-inside: avoid; page-break-inside: avoid; }
        }
    </style>
</head>
<body class="bg-gray-100 text-slate-800 font-sans p-0 m-0 min-h-screen flex flex-col items-center">

    <!-- Toolbar -->
    <div class="no-print fixed top-0 left-0 w-full bg-slate-900 text-white p-4 shadow-lg z-50 flex justify-between items-center">
        <a href="/es" class="flex items-center gap-2 hover:text-primary transition-colors text-sm font-medium">
            <ArrowLeft size={18} />
            Volver al Portafolio
        </a>
        <button onclick="window.print()" class="flex items-center gap-2 bg-primary hover:bg-blue-600 px-4 py-2 rounded-lg transition-colors font-medium text-sm shadow-lg shadow-blue-500/20">
            <Printer size={18} />
            Imprimir / Guardar PDF
        </button>
    </div>

    <!-- CV Page (A4 sized approximation) -->
    <main class="bg-white w-full max-w-[210mm] min-h-[297mm] p-[15mm] md:p-[20mm] my-0 md:my-8 shadow-xl md:rounded-sm mx-auto relative mt-20 md:mt-24">
        
        <!-- Header -->
        <header class="border-b-2 border-slate-100 pb-8 mb-8 print:pb-4 print:mb-4">
            <h1 class="text-3xl md:text-4xl font-bold text-slate-900 uppercase tracking-tight mb-2">{personalInfo.name}</h1>
            <h2 class="text-xl text-primary font-medium mb-6 print:mb-4">{personalInfo.role}</h2>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-y-2 gap-x-8 text-sm text-slate-600 print:grid-cols-3 print:gap-y-1 print:text-xs">
                <div class="flex items-center gap-2">
                    <Mail size={16} className="text-slate-400" />
                    <a href={`mailto:${personalInfo.email}`}>{personalInfo.email}</a>
                </div>
                <div class="flex items-center gap-2">
                    <Phone size={16} className="text-slate-400" />
                    <span>{personalInfo.phone}</span>
                </div>
                <div class="flex items-center gap-2">
                    <MapPin size={16} className="text-slate-400" />
                    <span>{personalInfo.location}</span>
                </div>
                <div class="flex items-center gap-2">
                    <Globe size={16} className="text-slate-400" />
                    <a href={`https://${personalInfo.website}`} target="_blank">{personalInfo.website}</a>
                </div>
                <div class="flex items-center gap-2">
                    <Linkedin size={16} className="text-slate-400" />
                    <a href={`https://${personalInfo.linkedin}`} target="_blank">linkedin.com/in/jahaziel-vazquez</a>
                </div>
                <div class="flex items-center gap-2">
                    <Github size={16} className="text-slate-400" />
                    <a href={`https://${personalInfo.github}`} target="_blank">github.com/Jahaziel-19</a>
                </div>
            </div>
        </header>

        <!-- Summary -->
        <section class="mb-8 print:mb-4 break-avoid">
            <h3 class="text-sm font-bold text-slate-900 uppercase tracking-wider border-b border-slate-200 pb-1 mb-3">Perfil Profesional</h3>
            <p class="text-slate-700 leading-relaxed text-justify">
                {summary}
            </p>
        </section>

        <!-- Skills -->
        <section class="mb-8 print:mb-4 break-avoid">
            <h3 class="text-sm font-bold text-slate-900 uppercase tracking-wider border-b border-slate-200 pb-1 mb-4 print:mb-2">Habilidades Técnicas</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 print:grid-cols-2 print:gap-2">
                {skills.map(group => (
                    <div class="break-avoid">
                        <h4 class="font-semibold text-slate-800 mb-1 text-sm">{group.category}</h4>
                        <p class="text-sm text-slate-600 leading-relaxed">
                            {group.items.join(", ")}
                        </p>
                    </div>
                ))}
            </div>
        </section>

        <!-- Experience / Projects -->
        <section class="mb-8 print:mb-4">
            <h3 class="text-sm font-bold text-slate-900 uppercase tracking-wider border-b border-slate-200 pb-1 mb-6 print:mb-3">Proyectos Destacados</h3>
            
            <div class="space-y-6 print:space-y-4">
                {projects.map(project => (
                    <div class="break-avoid">
                        <div class="flex justify-between items-baseline mb-2 print:mb-1">
                            <h4 class="font-bold text-slate-900 text-lg">{project.title}</h4>
                            <span class="text-xs font-medium text-white bg-slate-800 px-2 py-0.5 rounded print:text-black print:bg-transparent print:border print:border-slate-400">{project.role}</span>
                        </div>
                        <ul class="list-disc list-outside ml-5 text-slate-700 text-sm mb-3 space-y-1 print:mb-2">
                            {project.points.map(point => (
                                <li class="text-justify pl-1">{point}</li>
                            ))}
                        </ul>
                        <div class="flex flex-wrap gap-2">
                            {project.tech.map(t => (
                                <span class="text-xs text-slate-500 border border-slate-200 px-1.5 py-0.5 rounded bg-slate-50">
                                    {t}
                                </span>
                            ))}
                        </div>
                    </div>
                ))}
            </div>
        </section>

        <!-- Education -->
        <section class="mb-8 print:mb-0 break-avoid">
            <h3 class="text-sm font-bold text-slate-900 uppercase tracking-wider border-b border-slate-200 pb-1 mb-4 print:mb-2">Educación</h3>
            <div class="space-y-4 print:space-y-2">
                {education.map(edu => (
                    <div class="break-avoid">
                        <div class="flex justify-between items-start">
                            <h4 class="font-bold text-slate-900 text-base">{edu.degree}</h4>
                            <span class="text-xs font-medium text-slate-500 bg-slate-100 px-2 py-0.5 rounded whitespace-nowrap ml-2 print:bg-transparent print:border print:border-slate-200">{edu.status}</span>
                        </div>
                        <p class="text-sm text-slate-700 font-medium">{edu.institution}</p>
                        {edu.note && <p class="text-xs text-slate-500 mt-1">{edu.note}</p>}
                    </div>
                ))}
            </div>
        </section>
    </main>
</body>
</html>